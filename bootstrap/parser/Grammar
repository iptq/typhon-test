#!/usr/bin/python
# https://en.wikipedia.org/wiki/Extended_Backus%E2%80%93Naur_form

Grammar = Rule

Newline = Newline_
Newline_ = Newline_ + NEWLINE, EMPTY

Rule = Newline + Rule_
Rule_ = EMPTY, LHS + ":" + RHS + Newline + Rule_

LHS = IDENT
RHS = IDENT, STRING, \
    "[" + RHS + "]", \
    "{" + RHS + "}", \
    "(" + RHS + ")", \
    RHS + "|" + RHS, \
    RHS + "," + RHS
